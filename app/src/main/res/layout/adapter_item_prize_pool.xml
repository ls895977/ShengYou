<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.xiaoshanghai.nancang.view.CircleImageView
        android:padding="@dimen/dp_5"
        android:scaleType="centerInside"
        app:radius="@dimen/dp_6"
        android:background="@drawable/shape_g_r6_bg"
        android:id="@+id/iv_prize"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_prize_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="520"
        android:textColor="@color/color_fccf02"
        android:textSize="@dimen/sp_10"
        app:layout_constraintEnd_toEndOf="@id/iv_prize"
        app:layout_constraintStart_toStartOf="@id/iv_prize"
        app:layout_constraintTop_toBottomOf="@id/iv_prize" />

    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/color_fccf02"
        android:textSize="@dimen/sp_10"
        app:layout_constraintEnd_toEndOf="@id/tv_money_type"
        app:layout_constraintEnd_toStartOf="@id/tv_money_type"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/iv_prize"
        app:layout_constraintTop_toBottomOf="@id/tv_prize_name" />

    <TextView
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/tv_money_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金币"
        android:textColor="@color/color_fccf02"
        android:textSize="@dimen/sp_10"
        app:layout_constraintEnd_toEndOf="@id/iv_prize"
        app:layout_constraintStart_toEndOf="@id/tv_money"
        app:layout_constraintTop_toBottomOf="@id/tv_prize_name" />


</androidx.constraintlayout.widget.ConstraintLayout>