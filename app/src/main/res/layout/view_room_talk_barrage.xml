<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_msg_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_in_room_noble_0"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_10">

    <LinearLayout
        android:layout_gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_7">

        <ImageView
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_noble"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/dp_3"
            android:src="@mipmap/icon_noble_1"
            android:visibility="visible" />

        <com.xiaoshanghai.nancang.mvp.ui.view.UserLevelView
            android:layout_marginTop="1px"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_clv"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_3"
            android:visibility="visible" />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_bbbbbb"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=":"
            android:textColor="@color/color_bbbbbb"
            android:textSize="@dimen/dp_12" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_takl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginBottom="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_12"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12" />

</LinearLayout>
