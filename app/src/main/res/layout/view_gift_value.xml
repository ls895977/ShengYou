<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_gift_value_4"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_61"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_8" />

    <LinearLayout
        android:visibility="visible"
        android:layout_marginRight="-15dp"
        android:id="@+id/view_4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_alignTop="@id/view_gift_value_4"
        android:layout_alignRight="@id/view_gift_value_4"
        android:background="@drawable/shape_mike_start"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:src="@mipmap/icon_mike_start" />

        <TextView
            android:id="@+id/tv_gift_value_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_10" />

    </LinearLayout>

</RelativeLayout>