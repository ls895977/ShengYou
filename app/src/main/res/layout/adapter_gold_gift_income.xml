<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_72"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_29"
        android:src="@mipmap/icon_logo" />

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:text="红玫瑰"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="13:25:36"
                android:textColor="@color/color_515151"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_gift_num"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="×99"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gift_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收礼人："
                android:textColor="@color/color_515151"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是一个小萌新"
                android:textColor="@color/color_515151"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginRight="@dimen/dp_24"
        android:gravity="center_vertical|right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_gift_value"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textColor="@color/red"
            android:textSize="24sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_gift_type"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金币"
            android:textColor="@color/color_515151"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


</LinearLayout>