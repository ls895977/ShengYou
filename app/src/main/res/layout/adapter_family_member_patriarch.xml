<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_margin="@dimen/dp_12"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:background="@color/color_fdfdfd"
    android:orientation="horizontal">

    <com.xiaoshanghai.nancang.view.CircleImageView
        android:id="@+id/civ_user_avater"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_10"
        app:radius="@dimen/dp_45" />

    <TextView
        android:singleLine="true"
        android:minWidth="@dimen/dp_60"
        android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@mipmap/icon_family_synopsis_tag" />
    <View
        android:layout_weight="1"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_marginRight="@dimen/dp_10"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_family_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>

</RelativeLayout>