<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_car"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:layout_centerHorizontal="true"
    android:background="@drawable/shape_car_bg">


    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="@dimen/dp_142"
        android:layout_height="@dimen/dp_117"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_stint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@drawable/shape_yellow"
        android:gravity="center"
        android:text="限"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_test_drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_car"
        android:layout_alignBottom="@id/iv_car"
        android:background="@drawable/shape_test_drive"
        android:gravity="center"
        android:text="试驾"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_10"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_car_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_car"
        android:gravity="center"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_16" />

</RelativeLayout>