<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mvp.ui.activity.mine.TeensOpenAct">

    <com.xiaoshanghai.nancang.mvp.ui.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bgColor="@color/white"
        app:titleColor="@color/color_black" />

    <TextView
        android:id="@+id/tv_set_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_50"
        android:text="青少年模式关闭密码"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_20" />



    <com.xiaoshanghai.nancang.view.InputEditViewLayout
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_below="@id/tv_set_psw"
        android:layout_marginTop="@dimen/dp_30"
        android:inputType="number"
        app:bgSize="2"
        app:et_bgColor="@color/color_black"
        app:passwordNumber="4" />


    <Button
        android:id="@+id/bt_open"
        android:enabled="false"
        android:stateListAnimator="@null"
        android:text="完成"
        android:background="@drawable/shape_teens_select_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_67"
        android:layout_below="@id/et_input"
        android:layout_width="227dp"
        android:layout_height="@dimen/dp_40"/>

</RelativeLayout>