<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />


    <FrameLayout
        android:visibility="visible"
        android:id="@+id/fl_car_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_17">


        <LinearLayout
            android:id="@+id/ll_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_ff5f85"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="金币/辣椒"
                android:textColor="@color/color_ff5f85"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="("
                android:textColor="@color/color_484848"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@color/color_484848"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="天"
                android:textColor="@color/color_484848"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=")"
                android:textColor="@color/color_484848"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/ll_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4">

                <TextView
                    android:id="@+id/tv_give_away"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_lin_left"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="赠送"
                    android:textColor="@color/color_484848"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_right_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="购买"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/tv_my_buy"-->
<!--                android:visibility="visible"-->
<!--                android:gravity="center"-->
<!--                android:textColor="@color/white"-->
<!--                android:paddingLeft="@dimen/dp_15"-->
<!--                android:paddingRight="@dimen/dp_15"-->
<!--                android:paddingTop="@dimen/dp_8"-->
<!--                android:paddingBottom="@dimen/dp_8"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/shape_r_bg"-->
<!--                android:text="赠送"-->
<!--                android:textSize="@dimen/sp_12" />-->


        </LinearLayout>

        <TextView
            android:id="@+id/tv_stint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="活动专享"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />

    </FrameLayout>


</LinearLayout>