<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mvp.ui.activity.mine.BindWeChatAct">

    <com.xiaoshanghai.nancang.mvp.ui.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bgColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="绑定银行卡"
        app:titleColor="@color/black" />

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_black_num_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_34"
                android:layout_marginTop="@dimen/dp_40"
                android:text="银行卡账号"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_black_num"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_46"
                android:layout_marginEnd="@dimen/dp_34"
                android:background="@color/white"
                android:hint="请输入银行卡号"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="@id/tv_black_num_type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_black_num_type"
                app:layout_constraintTop_toTopOf="@id/tv_black_num_type" />

            <View
                android:id="@+id/view_black_1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@color/color_a5a5a5"
                app:layout_constraintEnd_toEndOf="@id/et_black_num"
                app:layout_constraintStart_toStartOf="@id/et_black_num"
                app:layout_constraintTop_toBottomOf="@id/tv_black_num_type" />

            <TextView
                android:id="@+id/tv_black_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_52"
                android:text="银行"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_16"
                app:layout_constraintStart_toStartOf="@id/tv_black_num_type"
                app:layout_constraintTop_toBottomOf="@id/et_black_num" />


            <EditText
                android:id="@+id/et_black_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_34"
                android:background="@color/white"
                android:hint="请输入开户银行"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="@id/tv_black_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/et_black_num"
                app:layout_constraintTop_toTopOf="@id/tv_black_name" />

            <View
                android:id="@+id/view_black_2"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@color/color_a5a5a5"
                app:layout_constraintEnd_toEndOf="@id/et_black_name"
                app:layout_constraintStart_toStartOf="@id/et_black_name"
                app:layout_constraintTop_toBottomOf="@id/tv_black_name" />

            <TextView
                android:id="@+id/tv_branch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_52"
                android:text="支行"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_16"
                app:layout_constraintStart_toStartOf="@id/tv_black_num_type"
                app:layout_constraintTop_toBottomOf="@id/view_black_2" />


            <EditText
                android:id="@+id/et_branch_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_34"
                android:background="@color/white"
                android:hint="请输入开户支行"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="@id/tv_branch_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/et_black_num"
                app:layout_constraintTop_toTopOf="@id/tv_branch_name" />

            <View
                android:id="@+id/view_black_3"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@color/color_a5a5a5"
                app:layout_constraintEnd_toEndOf="@id/et_black_name"
                app:layout_constraintStart_toStartOf="@id/et_black_name"
                app:layout_constraintTop_toBottomOf="@id/tv_branch_name" />


            <TextView
                app:layout_constraintStart_toStartOf="@id/tv_black_num_type"
                app:layout_constraintTop_toBottomOf="@id/view_black_3"
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_52"
                android:text="真实姓名"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_16" />


            <EditText
                app:layout_constraintStart_toStartOf="@id/et_black_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_user_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
                android:id="@+id/et_user_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_34"
                android:background="@color/white"
                android:hint="银行卡绑定的真实姓名"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/view_black_4"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@color/color_a5a5a5"
                app:layout_constraintEnd_toEndOf="@id/et_user_name"
                app:layout_constraintStart_toStartOf="@id/et_user_name"
                app:layout_constraintTop_toBottomOf="@id/tv_user_name" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_52"
                android:text="验证码"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_black_4" />

            <EditText
                android:inputType="number"
                android:id="@+id/et_code"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@color/white"
                android:hint="请输入手机验证码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="@id/tv_code"
                app:layout_constraintEnd_toStartOf="@id/tv_send_code"
                app:layout_constraintStart_toStartOf="@id/et_black_num"
                app:layout_constraintTop_toTopOf="@id/tv_code" />

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginEnd="@dimen/dp_34"
                android:gravity="center"
                android:minWidth="@dimen/dp_65"
                android:text="获取验证码"
                android:textColor="@color/color_ff5f85"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="@id/et_code"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_code" />

            <View
                android:id="@+id/view_code"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@color/color_a5a5a5"
                app:layout_constraintEnd_toEndOf="@id/et_black_name"
                app:layout_constraintStart_toStartOf="@id/et_black_name"
                app:layout_constraintTop_toBottomOf="@id/tv_code" />


            <TextView
                android:id="@+id/tv_bind"
                android:layout_width="@dimen/dp_280"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_34"
                android:background="@drawable/shape_button_rounded_reg_select"
                android:enabled="false"
                android:gravity="center"
                android:text="确认绑定"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_code" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>