<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/iv_home_teens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_home_teens"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_leaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_260"
        android:src="@mipmap/icon_leaf"
        app:layout_constraintBottom_toBottomOf="@id/iv_home_teens"
        app:layout_constraintEnd_toEndOf="@id/iv_home_teens"
        app:layout_constraintStart_toStartOf="@id/iv_home_teens"
        app:layout_constraintTop_toTopOf="@id/iv_home_teens" />

    <TextView
        android:id="@+id/tv_teen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sp_30"
        android:text="青少年模式"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="@id/iv_home_teens"
        app:layout_constraintStart_toStartOf="@id/iv_home_teens"
        app:layout_constraintTop_toTopOf="@id/iv_home_teens" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="center_horizontal"
        android:text="为呵护未成年人健康成长，特别推出青少年模式，该模式下部分功能无法正常使用。请监护人主动选择，并设置监护密码。"
        android:textColor="@color/color_444444"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@id/iv_home_teens"
        app:layout_constraintStart_toStartOf="@id/iv_home_teens"
        app:layout_constraintTop_toBottomOf="@id/tv_teen_title" />

    <TextView
        android:id="@+id/tv_teen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="进入青少年模式 >"
        android:textColor="@color/color_ff5f85"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@id/iv_home_teens"
        app:layout_constraintStart_toStartOf="@id/iv_home_teens"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <TextView
        android:id="@+id/tv_know"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_35"
        android:background="@drawable/shape_button_r15_p_bg"
        android:gravity="center"
        android:text="我知道了"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@id/iv_home_teens"
        app:layout_constraintStart_toStartOf="@id/iv_home_teens"
        app:layout_constraintTop_toBottomOf="@id/tv_teen" />

</androidx.constraintlayout.widget.ConstraintLayout>