<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_noble_select"
    android:id="@+id/rl_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_84">

    <ImageView
        android:id="@+id/iv_noble_avatar"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/icon_king_y" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_noble_avatar"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_noble_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_3"
            android:text="皇帝贵族"
            android:textColor="@color/color_ff9b23"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_noble_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600,000"
                android:textColor="@color/color_ff9b23"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_noble_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金币"
                android:textColor="@color/color_ff9b23"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>