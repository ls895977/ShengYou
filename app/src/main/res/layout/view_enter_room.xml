<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_noble_bg"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/img_noble_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_56"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxEms="8"
        android:maxLines="1"
        android:text="“豌豆射手大战齐天大圣”"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@id/iv_noble_bg"
        app:layout_constraintEnd_toStartOf="@id/tv_enter_room"
        app:layout_constraintStart_toStartOf="@id/iv_noble_bg"
        app:layout_constraintTop_toTopOf="@id/iv_noble_bg" />

    <TextView
        android:id="@+id/tv_enter_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="进入房间"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@id/iv_noble_bg"
        app:layout_constraintStart_toEndOf="@id/tv_user_name"
        app:layout_constraintTop_toTopOf="@id/iv_noble_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>