<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.xiaoshanghai.nancang.view.CircleImageView
        android:id="@+id/civ_room_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        app:layout_constraintBottom_toTopOf="@id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="@dimen/dp_10" />

    <com.xiaoshanghai.nancang.mvp.ui.view.RoomBgNobleView
        android:id="@+id/bnb_noble"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/civ_room_bg"
        app:layout_constraintTop_toTopOf="@id/civ_room_bg" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_flag"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@color/color_afafaf"
        android:gravity="center"
        android:text="已过期"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/civ_room_bg"
        app:layout_constraintEnd_toEndOf="@id/civ_room_bg"
        app:layout_constraintStart_toStartOf="@id/civ_room_bg" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="夕阳"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/civ_room_bg"
        app:layout_constraintTop_toBottomOf="@id/civ_room_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>