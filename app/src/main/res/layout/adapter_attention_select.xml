<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_82"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.xiaoshanghai.nancang.view.CircleImageView
        app:radius="@dimen/dp_45"
        android:id="@+id/civ_avatar"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兔小兔"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_16" />

            <com.xiaoshanghai.nancang.mvp.ui.view.UserLevelView
                android:layout_gravity="center_vertical"
                android:id="@+id/ulv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.xiaoshanghai.nancang.mvp.ui.view.CharmLevelView
                android:layout_gravity="center_vertical"
                android:id="@+id/clv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_user_introduce"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:text="要十金币"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />


    </LinearLayout>

    <TextView
        android:visibility="visible"
        android:id="@+id/tv_find"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_22"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/shape_attention_bg"
        android:gravity="center"
        android:text="赠送"
        android:textColor="@color/colorPrimary" />

</LinearLayout>