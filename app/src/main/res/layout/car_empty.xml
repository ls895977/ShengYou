<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_gift_empty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


        <TextView
            android:layout_marginTop="@dimen/dp_30"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="座驾"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_title"
            android:layout_toRightOf="@id/tv_title"
            android:text="(0)"
            android:textColor="@color/color_aaaaaa"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="@dimen/dp_196"
            android:layout_height="@dimen/dp_174"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_84"
            android:src="@mipmap/img_homepage_gift_empty" />



        <RelativeLayout
            android:id="@+id/rl_give_away"
            android:layout_below="@id/iv_empty"
            android:layout_width="@dimen/dp_217"
            android:layout_height="@dimen/dp_45"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_line_bg">

                <TextView
                    android:id="@+id/tv_give_away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_ff5f85"
                    android:textSize="@dimen/sp_16" />

        </RelativeLayout>



</RelativeLayout>