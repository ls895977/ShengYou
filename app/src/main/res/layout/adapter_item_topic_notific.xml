<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_94"
    android:background="@color/white">

    <com.xiaoshanghai.nancang.view.CircleImageView
        android:id="@+id/iv_user_picture"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/icon_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="@dimen/dp_50" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_3"
        android:ellipsize="end"
        android:maxEms="7"
        android:maxLines="1"
        android:text="Cp.葡萄"
        android:textColor="@color/color_787878"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@id/tv_topic"
        app:layout_constraintStart_toEndOf="@id/iv_user_picture"
        app:layout_constraintTop_toTopOf="@id/iv_user_picture"
        app:layout_constraintVertical_chainStyle="packed" />
    
    <ImageView
        android:id="@+id/sex_view"
        android:layout_marginStart="@dimen/dp_6"
        app:layout_constraintTop_toTopOf="@id/tv_user_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toEndOf="@id/tv_user_name"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"/>

    <TextView
        android:id="@+id/tv_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_3"
        android:text="赞了你的动态"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_picture"
        app:layout_constraintStart_toEndOf="@id/iv_user_picture"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:text="2020-06-22 19:03:03"
        android:textColor="@color/color_787878"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_user_picture"
        app:layout_constraintTop_toBottomOf="@id/iv_user_picture" />

    <com.xiaoshanghai.nancang.view.CircleImageView
        android:id="@+id/iv_topic_picture"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@mipmap/icon_logo"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="@dimen/dp_8" />

    <TextView
        android:id="@+id/tv_topic_content"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_marginEnd="@dimen/dp_20"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxEms="8"
        android:maxLines="2"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        android:text=""
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_read_flag"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/shape_r5_r_r_bg"
        app:layout_constraintEnd_toStartOf="@id/iv_topic_picture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/dp_82" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@color/color_eeeeee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>