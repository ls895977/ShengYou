<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.studio.RoomSettingAct">

    <com.xiaoshanghai.nancang.mvp.ui.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:title="房间设置"
        app:titleColor="@color/black" />

    <LinearLayout
        android:id="@+id/ll_room_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="房间名"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_family_right"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="right"
            android:textColor="@color/color_9a9a9a"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:background="@color/color_e6e6e6" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="房间上锁"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_16" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_room_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_18"
            android:checked="false"
            android:longClickable="false"
            android:theme="@style/SwitchStyle"
            app:switchMinWidth="@dimen/dp_50"
            app:thumbTextPadding="@dimen/dp_40"
            app:thumbTint="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_room_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@color/color_e6e6e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:text="房间密码"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_room_psd"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_weight="1"
                android:drawableRight="@mipmap/icon_family_right"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="right"
                android:textColor="@color/color_9a9a9a"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_e6e6e6" />

    <LinearLayout
        android:id="@+id/ll_room_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="房间标签"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_family_right"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="right"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_e6e6e6" />

    <LinearLayout
        android:id="@+id/ll_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:text="管理员"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_weight="1"
                android:drawableRight="@mipmap/icon_family_right"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="right"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@color/color_e6e6e6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_black_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="黑名单"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_family_right"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="right"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:background="@color/color_e6e6e6" />

    <LinearLayout
        android:id="@+id/ll_room_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_18"
                android:text="房间背景"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_weight="1"
                android:drawableRight="@mipmap/icon_family_right"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="right"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@color/color_e6e6e6" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="礼物特效"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_16" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_18"
            android:checked="false"
            android:longClickable="false"
            android:theme="@style/SwitchStyle"
            app:switchMinWidth="@dimen/dp_50"
            app:thumbTextPadding="@dimen/dp_40"
            app:thumbTint="@color/white" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:background="@color/color_e6e6e6" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="房间公屏"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_16" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_18"
            android:checked="false"
            android:longClickable="false"
            android:theme="@style/SwitchStyle"
            app:switchMinWidth="@dimen/dp_50"
            app:thumbTextPadding="@dimen/dp_40"
            app:thumbTint="@color/white" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:background="@color/color_e6e6e6" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="排麦模式"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/sp_16" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swtich_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_18"
            android:checked="false"
            android:longClickable="false"
            android:theme="@style/SwitchStyle"
            app:switchMinWidth="@dimen/dp_50"
            app:thumbTextPadding="@dimen/dp_40"
            app:thumbTint="@color/white" />

    </RelativeLayout>


</LinearLayout>