<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:scaleType="centerCrop"
        android:background="@drawable/icon_centerheader" />
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableLoadMore="false">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >




                <TextView
                    android:id="@+id/tv_kf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_58"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:drawableLeft="@mipmap/icon_kf"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="客服"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:id="@+id/rl_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_88"
                    android:layout_marginRight="@dimen/dp_12"
                    android:minHeight="@dimen/dp_170">

                    <LinearLayout
                        android:id="@+id/tv_user_info"
                        android:layout_width="match_parent"
                        android:layout_height="116dp"
                        android:orientation="horizontal">

                        <com.xiaoshanghai.nancang.mvp.ui.view.AvatarView
                            android:id="@+id/fl_avater"
                            android:layout_width="@dimen/dp_78"
                            android:layout_height="@dimen/dp_78"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:layout_marginTop="@dimen/dp_20"
                            app:avatar_radius="@dimen/dp_45"
                            app:headwearPadding="@dimen/dp_16" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_78"
                            android:layout_alignBottom="@id/fl_avater"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_toEndOf="@id/fl_avater"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/iv_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/dp_18"
                                android:src="@mipmap/icon_my_set_up_right"
                              />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:layout_toStartOf="@id/iv_right"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_20"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:id="@+id/tv_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_18" />

                                    <ImageView
                                        android:layout_gravity="center_vertical"
                                        android:scaleType="centerInside"
                                        android:visibility="gone"
                                        android:id="@+id/iv_noble"
                                        android:layout_width="@dimen/dp_15"
                                        android:layout_height="@dimen/dp_15"
                                        android:src="@mipmap/img_baron" />

                                    <ImageView
                                        android:layout_gravity="center_vertical"
                                        android:id="@+id/iv_sex"
                                        android:layout_width="@dimen/dp_15"
                                        android:layout_height="@dimen/dp_15"
                                        android:layout_marginStart="@dimen/dp_5"
                                        android:scaleType="centerInside" />

                                    <com.xiaoshanghai.nancang.mvp.ui.view.UserLevelView
                                        android:layout_gravity="center_vertical"
                                        android:id="@+id/clv_lv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_marginBottom="@dimen/dp_1" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <com.xiaoshanghai.nancang.mvp.ui.view.ConstellationView
                                        android:id="@+id/tv_start"
                                        android:layout_width="@dimen/dp_42"
                                        android:layout_height="@dimen/dp_14"
                                        android:layout_gravity="center_vertical" />

                                    <ImageView
                                        android:id="@+id/iv_lh"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_5"
                                        android:src="@mipmap/icon_lh"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tv_user_id"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/sp_12" />


                                </LinearLayout>


                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_72"
                        android:layout_below="@id/tv_user_info"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_18"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingBottom="@dimen/dp_1"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/rl_attention"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_attention_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_attention"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_attention_num"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_10"
                                android:gravity="center_horizontal"
                                android:text="关注"
                                android:textColor="@color/color_707070"
                                android:textSize="@dimen/sp_12" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_my_fans"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_fan_num"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_fan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_fan_num"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_10"
                                android:gravity="center_horizontal"
                                android:text="粉丝"
                                android:textColor="@color/color_707070"
                                android:textSize="@dimen/sp_12" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_user_lv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_lv_user_num"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"
                                android:text="LV.1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_lv_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_lv_user_num"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_10"
                                android:gravity="center_horizontal"
                                android:text="用户等级"
                                android:textColor="@color/color_707070"
                                android:textSize="@dimen/sp_12" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_charm_num"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_charm_num"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"
                                android:text="LV.1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_charm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_charm_num"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/dp_10"
                                android:gravity="center_horizontal"
                                android:text="魅力等级"
                                android:textColor="@color/color_707070"
                                android:textSize="@dimen/sp_12" />


                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@id/rl_user_info"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@drawable/shape_rounded_white_side_red"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_18"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingBottom="@dimen/dp_1">

                        <RelativeLayout
                            android:id="@+id/rl_gold"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_my_recharge"
                                android:drawablePadding="@dimen/dp_15"
                                android:text="金币/充值"
                                android:textColor="@color/color_484848"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_diamond"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_my_withdrawal"
                                android:drawablePadding="@dimen/dp_15"
                                android:text="钻石提现"
                                android:textColor="@color/color_484848"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_chili"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_my_pepper"
                                android:drawablePadding="@dimen/dp_15"
                                android:text="我的辣椒"
                                android:textColor="@color/color_484848"
                                android:textSize="14sp" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_18"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingBottom="@dimen/dp_1">

                        <RelativeLayout
                            android:id="@+id/rl_gift"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_my_gift"
                                android:drawablePadding="@dimen/dp_15"
                                android:text="我的礼物"
                                android:textColor="@color/color_484848"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_vehicle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_my_car"
                                android:drawablePadding="@dimen/dp_15"
                                android:text="头饰座驾"
                                android:textColor="@color/color_484848"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_vip"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_my_vip"
                                android:drawablePadding="@dimen/dp_15"
                                android:text="尊享贵族"
                                android:textColor="@color/color_484848"
                                android:textSize="14sp" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginRight="@dimen/dp_18"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingBottom="@dimen/dp_1">

                        <RelativeLayout
                            android:id="@+id/rl_family"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_my_family"
                                android:drawablePadding="@dimen/dp_15"
                                android:text="我的家族"
                                android:textColor="@color/color_484848"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_below="@id/ll_user_info"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rounded_white_side_red"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_1"
                    android:paddingBottom="@dimen/dp_1">

                    <RelativeLayout
                        android:id="@+id/rl_my_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/icon_my_name"
                            android:drawablePadding="@dimen/dp_15"
                            android:text="实名认证"
                            android:textColor="@color/color_484848"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_teenagers"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/icon_my_teenagers"
                            android:drawablePadding="@dimen/dp_15"
                            android:text="青少年模式"
                            android:textColor="@color/color_484848"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/tv_menu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/icon_my_menu"
                            android:drawablePadding="@dimen/dp_15"
                            android:text="我的设置"
                            android:textColor="@color/color_484848"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>