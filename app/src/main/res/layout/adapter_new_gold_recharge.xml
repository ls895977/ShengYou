<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_gold"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:layout_marginLeft="@dimen/dp_17"
    android:layout_marginRight="@dimen/dp_17"
    android:paddingLeft="@dimen/dp_24"
    android:background="@drawable/shape_gold_recharge_unselect">


    <TextView
        android:id="@+id/tv_gold_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="10"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_gold_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_gold_num"
        android:text="钻石"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_rmb_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_25"
        android:text="1"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_rmb_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_rmb_num"
        android:text="￥"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/iv_frist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@id/tv_rmb_type"
        android:src="@mipmap/icon_first_cash"
        android:visibility="gone" />


</RelativeLayout>