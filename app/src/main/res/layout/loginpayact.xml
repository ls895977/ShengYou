<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <TextView
        android:id="@+id/tvHY"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_25"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:text="欢迎来到"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvHYXSH"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/tvHY"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_40"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:text="小尚海"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvJLB"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/sp_28"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/tvHYXSH"
        app:layout_constraintBottom_toBottomOf="@+id/tvHYXSH"
        android:textSize="@dimen/sp_23"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:text="俱乐部会员平台"
        android:layout_height="wrap_content"/>
      <ImageView
          android:id="@+id/imImg"
          android:layout_marginTop="@dimen/dp_20"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvJLB"
          android:layout_width="@dimen/dp_180"
          android:src="@mipmap/join_ticket"
          android:layout_height="@dimen/dp_200"/>
    <TextView
        android:id="@+id/tvJLB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/imImg"
        android:textSize="@dimen/sp_23"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:text="一共有182743个宝藏女孩"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvJLB2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tvJLB1"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:text="加入小尚海和她们亲密接触"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_120"
        app:layout_constraintTop_toBottomOf="@+id/tvJLB2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvJLB3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:text="入场费"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvJLB4"
        app:layout_constraintTop_toTopOf="@+id/tvJLB3"
        app:layout_constraintLeft_toRightOf="@+id/tvJLB3"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        android:textColor="@color/color_ffd10c"
        android:layout_width="wrap_content"
        android:text="￥68元"
        android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.xiaoshanghai.nancang.view.DrawLineTextView
        android:id="@+id/tvJLB5"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cl1"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_707070"
        android:layout_width="wrap_content"
        android:text="原价：￥389元"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPay"
        android:background="@drawable/shape_button_r20_bg"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_15"
        android:text="立即加入"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvJLB5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>