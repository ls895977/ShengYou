<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.activity.studio.LotteryRuleAct">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_550"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_94"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/shape_b_r10_bg"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_bx"
            android:layout_width="@dimen/dp_186"
            android:layout_height="@dimen/dp_186"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_close_bx"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_close_bx"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            app:layout_constraintStart_toEndOf="@id/iv_bx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抽奖规则"
            android:textColor="#ffe0e2f0"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_bx"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_bx" />

        <ScrollView
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginStart="@dimen/sp_20"
            android:layout_marginEnd="@dimen/sp_20"
            android:layout_marginBottom="@dimen/sp_20"
            app:layout_constraintTop_toBottomOf="@id/iv_bx"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0">

            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:id="@+id/tv_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>