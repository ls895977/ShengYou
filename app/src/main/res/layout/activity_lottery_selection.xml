<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.activity.studio.LotterySelectionAct">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/shape_b_r10_bg"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="选择一个开启的宝箱"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_close_bx"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title" />


        <ImageView
            android:id="@+id/iv_bybx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/icon_bybx"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_bybx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="白银宝箱"
            android:textColor="@color/color_e0e2f0"
            android:textSize="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="@id/iv_bybx"
            app:layout_constraintStart_toStartOf="@id/iv_bybx"
            app:layout_constraintTop_toBottomOf="@id/iv_bybx" />

        <TextView
            android:id="@+id/tv_byjp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:text="查看奖池奖品"
            android:textColor="@color/color_eef0f6"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/iv_bybx"
            app:layout_constraintStart_toStartOf="@id/iv_bybx"
            app:layout_constraintTop_toBottomOf="@id/tv_bybx" />

        <ImageView
            android:id="@+id/iv_hjbx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/icon_hjbx"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_hjbx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="黄金宝箱"
            android:textColor="@color/color_fbb332"
            android:textSize="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="@id/iv_hjbx"
            app:layout_constraintStart_toStartOf="@id/iv_hjbx"
            app:layout_constraintTop_toBottomOf="@id/iv_hjbx" />

        <TextView
            android:id="@+id/tv_hjjp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:text="查看奖池奖品"
            android:textColor="@color/color_fbb332"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/iv_hjbx"
            app:layout_constraintStart_toStartOf="@id/iv_hjbx"
            app:layout_constraintTop_toBottomOf="@id/tv_hjbx" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_prize_pool"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/shape_b_r10_bg"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_bx"
            android:layout_width="186dp"
            android:layout_height="186dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_right_finish"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_cj_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_bx_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:textColor="@color/color_e0e2f0"
            android:textSize="@dimen/sp_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_bx"
            app:layout_constraintTop_toBottomOf="@id/iv_right_finish" />

        <TextView
            android:id="@+id/tv_bx_jcwp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="奖池物品"
            android:textColor="@color/color_eef0f6"
            android:textSize="@dimen/sp_12"
            app:layout_constraintEnd_toEndOf="@id/tv_bx_name"
            app:layout_constraintTop_toBottomOf="@id/tv_bx_name" />

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/rcy_lottery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_bx" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>