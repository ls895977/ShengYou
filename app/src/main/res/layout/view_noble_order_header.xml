<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"
        android:text="请选择付款方式："
        android:textColor="@color/color_010101"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:id="@+id/ll_gold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/rl_type"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_17"
        android:background="@drawable/shape_noble_type_select"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/icon_noble_gold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="金币支付"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="当前余额："
            android:textColor="@color/color_787878"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_gold_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="0"
            android:textColor="@color/color_787878"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_17"
            android:text="金币"
            android:textColor="@color/color_787878"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_zfb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/ll_gold"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_17"
        android:background="@drawable/shape_noble_un_select"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/icon_noble_zfb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="支付宝支付"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="单笔最高消费"
            android:textColor="@color/color_787878"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="100000"
            android:textColor="@color/color_787878"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_17"
            android:text="元"
            android:textColor="@color/color_787878"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wx"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/ll_zfb"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_17"
        android:background="@drawable/shape_noble_un_select"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/icon_noble_wx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="微信支付"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="单笔最高消费"
            android:textColor="@color/color_787878"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="100000"
            android:textColor="@color/color_787878"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_17"
            android:text="元"
            android:textColor="@color/color_787878"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <TextView
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_below="@id/ll_wx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择开通/续费项目："
        android:textColor="@color/color_010101"
        android:textSize="@dimen/sp_16" />

</RelativeLayout>