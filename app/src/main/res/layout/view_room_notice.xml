<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_send_gift"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xiaoshanghai.nancang.view.CircleImageView
        android:id="@+id/civ_giver_avarar"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@mipmap/icon_logo"
        app:layout_constraintStart_toStartOf="@id/iv_bg"
        app:layout_constraintTop_toTopOf="@id/iv_bg"
        app:radius="@dimen/dp_45" />

    <TextView
        android:id="@+id/tv_give_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:text="豌豆射手"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"
        app:layout_constraintEnd_toEndOf="@id/civ_giver_avarar"
        app:layout_constraintStart_toStartOf="@id/civ_giver_avarar"
        app:layout_constraintTop_toBottomOf="@id/civ_giver_avarar" />

    <TextView
        android:id="@+id/tv_give"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:text="赠送"
        android:textColor="@color/color_ff0084"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        app:layout_constraintStart_toEndOf="@id/civ_giver_avarar"
        app:layout_constraintTop_toTopOf="@id/iv_bg" />

    <com.xiaoshanghai.nancang.view.CircleImageView
        android:id="@+id/civ_donor_avarar"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@mipmap/icon_logo"
        app:layout_constraintStart_toEndOf="@id/tv_give"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="@dimen/dp_45" />

    <TextView
        android:id="@+id/tv_donor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:text="豌豆射手"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"
        app:layout_constraintEnd_toEndOf="@id/civ_donor_avarar"
        app:layout_constraintStart_toStartOf="@id/civ_donor_avarar"
        app:layout_constraintTop_toBottomOf="@id/civ_donor_avarar" />

    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_54"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_donor_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_gift_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:text="x1314"
        android:textColor="@color/color_fff715"
        android:textSize="@dimen/sp_19"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_gift"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>